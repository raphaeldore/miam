@using Externalization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@UiText.Miam.TITLE</title>

    <link href="~/content/miam.css" rel="stylesheet">
    <link href="~/Content/Bootstrap/bootstrap.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
    @RenderSection("SectionCss", required: false)
</head>
<body>

    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div>@Html.ActionLink("Miam", MVC.Home.Index(), new { @class = "navbar-brand",id = "home-link"  } )</div>
                

            </div>
            <div class="navbar-collapse collapse">

                @Html.Action("NavigationMenu", "Navigation")
                @Html.Action("LoginPanel", "Navigation")

                <!-- À éviter voir commentaire dans _menuPartial.cshtml et _loginPartial -->
                @*@Html.Partial("_menuPartial")
                @Html.Partial("_LoginPartial")*@

            </div>
            <!--/.nav-collapse -->
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @RenderBody()
            </div>
        </div>

        <hr>
        <footer>
            <p>&copy;@UiText.Miam.DATE</p>
        </footer>
    </div>

    <!-- Bootstrap core JavaScript
        ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("SectionJavascript", required: false)

</body>
</html>
